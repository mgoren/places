<h2>Places Visited:</h2>
<% if @places == [] %>
  <p>You have been nowhere?</p>
<% else %>
  <ul>
    <% @places.each() do |place| %>
      <li><%= place.get_place_name() %></li>
    <% end %>
  </ul>
<% end %>
<h2>Add a new location:</h2>
<form action = "/confirmation" method="POST">
  <div class="form-group">
    <label class="form-label" for="place">Enter new location:</label>
    <input id="place" name="place" class="form-control" type="text" autofocus>
    <input type="hidden" name="username" value=<%= @username %>>
  </div>
  <button type="submit" class="button-go">Add</button>
</form>

<form action="/reset" method="POST">
  <input type="hidden" name="username" value=<%= @username %>>
  <button type="submit" class="button-reset">Clear list</button>
</form>
